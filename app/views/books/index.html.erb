<h1>Books</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span>
      <%= book.title %>
  </span>

  <p>Body</p>
  <span>
     <%= book.body %>
  </span>


  <span>
    <%= link_to "Show", book_path(book.id) %>
  </span>
  
　<td>
　  <%= link_to 'Edit', edit_book_path(book) %>
　</td>
　
　<td>
　  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
　</td>
<% end %>

<h1>New book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
	<br>
  <%= f.submit 'Create Book' %>
<% end %>